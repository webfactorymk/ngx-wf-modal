{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "lib": [
      "es5",
      "dom",
      "es6",
      "es2015.iterable",
      "es7"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "files": [
    "./src/ngx-wf-modal.module.ts"
  ],
  "exclude": [
    "build",
    "node_modules"
  ],
  "include": [
    "ngx-wf-modal/**/*"
  ],
  "angularCompilerOptions": {
    "genDir": "../aot",
    "skipMetadataEmit": false
  }
}